@model Models.Colegio

@{
    ViewData["Title"] = "Editar Colegio";
}

<h1>Editar Colegio</h1>

<form asp-action="Edit" asp-controller="Colegio" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @* Conservamos el Id como campo oculto *@
    <input asp-for="IdColegio" type="hidden" />

    <div class="mb-3 col-md-6">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" maxlength="100" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3 col-md-6">
        <label asp-for="RUC" class="form-label"></label>
        <input asp-for="RUC" class="form-control" maxlength="20" />
        <span asp-validation-for="RUC" class="text-danger"></span>
    </div>

    <div class="mb-3 col-12">
        <label asp-for="Direccion" class="form-label"></label>
        <input asp-for="Direccion" class="form-control" maxlength="150" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="mb-3 col-md-6">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control" type="tel" maxlength="20" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="mb-3 col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" type="email" maxlength="80" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3 col-md-8">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" maxlength="100" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="mb-3 col-md-4 d-flex align-items-center">
        <div class="form-check">
            <input asp-for="Estado" class="form-check-input" />
            <label asp-for="Estado" class="form-check-label"></label>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-controller="Colegio" asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
