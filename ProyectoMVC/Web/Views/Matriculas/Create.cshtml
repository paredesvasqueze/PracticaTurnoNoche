@model SistemaColegioMVC.Models.Matricula

<h2>Crear Matrícula</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Id Alumno</label>
        <input asp-for="IdAlumno" class="form-control" />
    </div>
    <div class="form-group">
        <label>Id Grado</label>
        <input asp-for="IdGrado" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fecha Matrícula</label>
        <input asp-for="FechaMatricula" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Año Lectivo</label>
        <input asp-for="AñoLectivo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Estado</label>
        <input asp-for="Estado" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>