@model Models.Docentes

<h2>Registrar Docente</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <label asp-for="IdColegio"></label>
            <input asp-for="IdColegio" class="form-control" />
            <span asp-validation-for="IdColegio" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DNI"></label>
            <input asp-for="DNI" class="form-control" />
            <span asp-validation-for="DNI" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label asp-for="Nombres"></label>
            <input asp-for="Nombres" class="form-control" />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Apellidos"></label>
            <input asp-for="Apellidos" class="form-control" />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label asp-for="Especialidad"></label>
            <input asp-for="Especialidad" class="form-control" />
            <span asp-validation-for="Especialidad" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="FechaIngreso"></label>
            <input asp-for="FechaIngreso" type="date" class="form-control" />
            <span asp-validation-for="FechaIngreso" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-3">
        <label>Estado</label>
        <input asp-for="Estado" type="checkbox" /> Activo
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
