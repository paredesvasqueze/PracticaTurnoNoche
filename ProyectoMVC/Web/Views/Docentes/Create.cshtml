@model Models.Docentes

<h2>Registrar Docente</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <label asp-for="IdColegio"></label>
            <input asp-for="IdColegio" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="DNI"></label>
            <input asp-for="DNI" class="form-control" />
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label asp-for="Nombres"></label>
            <input asp-for="Nombres" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Apellidos"></label>
            <input asp-for="Apellidos" class="form-control" />
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label asp-for="Especialidad"></label>
            <input asp-for="Especialidad" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="FechaIngreso"></label>
            <input asp-for="FechaIngreso" type="date" class="form-control" />
        </div>
    </div>

    <div class="form-group mt-2">
        <label>Estado</label>
        <input asp-for="Estado" type="checkbox" /> Activo
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>
